@using MvcCV.Models.Entity
@model List<TblIletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                  
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                               
                                <div class="timeline timeline-inverse">
                                   @foreach(var item in Model) {

                                        <div class="time-label">
                                            <span class="bg-danger">
                                                @item.Traih
                                            </span>
                                        </div>

                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> @item.Mail</span>
                                                <h3 class="timeline-header"><a href="#">@item.AdSoyad</a> @item.Konu</h3>
                                                
                                                <div class="timeline-body">
                                                    @item.Mesaj
                                                </div>
                                               <a href="/Iletisim/MesajSil/@item.ID" class="btn btn-danger" style="float:right">Sil</a>
                                            </div>
                                        </div>

                                   }
                                    </div>
                                
                                </div>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->

            <!-- /.row -->
       
    </section>
</body>
</html>