
@model MvcCV.Models.Entity.TblSosyalMedya
@{
    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Sosyal Medya Güncelleme Sayfası</h4>
<br />

<form class="form-group" method="post">

    @Html.Label("Ad")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />


    @Html.Label("Link")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />

    @Html.Label("İcon")
    @Html.TextBoxFor(x => x.Class, new { @class = "form-control" })
    <br />



    <button class="btn btn-info">Güncelle</button>

</form>




