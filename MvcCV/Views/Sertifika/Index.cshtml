@using MvcCV.Models.Entity
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach(var item in Model)
                                        {

                                        <div class="time-label">
                                           <a href="/Sertifika/SertifikaDüzenle/@item.ID" class="btn btn-success">
                                               <span class="bg-success">
                                                   @item.Tarih
                                               </span>
                                           </a>
                                        </div>
                                        <div>
                                            @*<i class="fas fa-comment bg-primary"></i>*@
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                  @item.Aciklama
                                                </div>
                                                @*<div class="timeline-footer">
                                                    <a href="Sertifika/SertifikaDüzenle" class="btn btn-primary btn-sm">Düzenle</a>
                                                    <a href="Sertifika/SertifikaSil" class="btn btn-danger btn-sm">Sil</a>
                                                </div>*@
                                            </div>
                                        </div>
                                        }
                                    </div>
                                        <a href="/Sertifika/SertifikaEkle/" class="btn btn-info">Yeni Sertifika Ekle</a>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
      
    </section>
</body>
</html>